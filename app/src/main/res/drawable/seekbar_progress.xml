            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dp" />
                <solid android:color="#134B70" /> <!-- لون الـ progress -->
            </shape>
        </clip>
    </item>
</layer-list>